{
  "name": "opencode-ide",
  "version": "1.0.0",
  "description": "AI-powered coding assistant with floating windows",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development npm run dev\" \"cross-env NODE_ENV=development wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "next build && electron-builder",
    "electron:pack": "electron-builder --dir",
    "lint": "eslint"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.2",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/language": "^6.12.1",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.15",
    "@github/copilot-sdk": "^0.1.25",
    "@tiptap/extension-collaboration": "^3.20.0",
    "@tiptap/extension-drag-handle": "^3.20.0",
    "@tiptap/extension-node-range": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "@tiptap/y-tiptap": "^3.0.2",
    "@uiw/react-codemirror": "^4.25.4",
    "@univerjs/core": "^0.15.5",
    "@univerjs/preset-sheets-core": "^0.15.5",
    "@univerjs/sheets": "^0.15.5",
    "@univerjs/sheets-ui": "^0.15.5",
    "codemirror": "^6.0.2",
    "docx": "^9.5.3",
    "electron-store": "^10.0.0",
    "lucide-react": "^0.574.0",
    "mammoth": "^1.11.0",
    "next": "^16.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-use-gesture": "^9.1.3",
    "uiohook-napi": "^1.5.4",
    "xlsx": "^0.18.5",
    "yjs": "^13.6.19",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^0.1.0",
    "@tailwindcss/postcss": "^4.0.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^10.0.1",
    "eslint-config-next": "^12.0.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.36.0",
    "typescript-language-server": "^5.1.3",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.opencode.ide",
    "productName": "OpenCode IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
